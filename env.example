# Database Configuration
DATABASE_URL=mysql+aiomysql://user:password@localhost:3306/database_name
# Or for PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/database_name

# JWT Configuration
# RSA Private Key (PEM format) - Will be loaded from AWS SSM in production
# Generate with: openssl genrsa -out private_key.pem 2048
JWT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
...your private key here...
-----END PRIVATE KEY-----

# JWT Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# AWS Configuration (for SSM Parameter Store)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# SSM Parameter paths (optional, if using SSM for secrets)
JWT_PRIVATE_KEY_SSM_PATH=/auth-service/jwt/private-key

# Application Configuration
APP_NAME=auth-service
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Security Settings
# Brute force protection
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW_MINUTES=15
ACCOUNT_LOCKOUT_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# CORS (if needed)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
